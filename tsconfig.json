{
    "compilerOptions": {
      "declaration": true,
      "declarationDir": "./dist",
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "noUnusedParameters": true,
      "strictNullChecks": true,
      "moduleResolution": "node",
      "noImplicitAny": true,
      "outDir": "./dist",
      "target": "es6",
      "jsx": "react"
    },
    "include": ["lib/**/*"],
    "exclude": ["node_modules"]
  }